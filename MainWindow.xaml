<Window x:Class="Projet_M1_Integration_Systeme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_M1_Integration_Systeme"
        mc:Ignorable="d"
        Title="Pizzeria" Height="1000" Width="1300">
    <Grid>

        <Border BorderBrush="Black" BorderThickness="1" Height="700" Width="400" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10" >
            <Frame Name="InteractiveFrame"  NavigationUIVisibility="Hidden" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Height="700" Width="400" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Frame Name="CommandsStatusFrame" NavigationUIVisibility="Hidden"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Height="700" Width="400" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Frame Name="StatisticsFrame" NavigationUIVisibility="Hidden"/>
        </Border>


    </Grid>
</Window>
